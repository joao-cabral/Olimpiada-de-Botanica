<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/icon"
            android:id="@+id/imageView"
            android:scaleType="centerCrop" android:alpha=".75"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="344dp"
            android:id="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="4dp" android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.483">

        <TableRow android:layout_width="wrap_content" android:layout_height="120dp"
                  android:gravity="center_horizontal" android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageBromelia"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/bromelia"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="120dp"
                  android:gravity="center_horizontal"
                  android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageAcai"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:src="@drawable/acai"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:padding="15dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageOrquidea"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:src="@drawable/orquidea"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:padding="15dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageBuriti"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:src="@drawable/buriti"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:padding="15dp"/>
        </TableRow>

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center_horizontal" android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageCacau"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cacaueiro"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:padding="15dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageSeringueira"
                    android:layout_width="130dp"
                    android:layout_height="120dp"
                    android:src="@drawable/seringueira"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:padding="15dp"/>
        </TableRow>
    </TableLayout>
    <TextView
            android:text="@string/guia"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:id="@+id/button_guia" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintBottom_toTopOf="@+id/tableLayout" app:layout_constraintVertical_bias="0.0"
            android:textAppearance="@android:style/TextAppearance.Large" app:fontFamily="@font/bevan"
            android:background="@drawable/shape_button_guia" android:padding="4dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Olimpíada de Botânica"
            android:layout_width="261dp"
            android:layout_height="112dp"
            android:textAlignment="gravity"
            android:id="@+id/textView5"
            android:textSize="36sp"
            app:fontFamily="@font/bevan" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" android:textColor="@android:color/background_dark"
    />
    <Button
            android:text="Jogar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_jogar"
            app:fontFamily="@font/bevan"
            android:background="@drawable/shape_button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="30sp"
            android:textColor="@android:color/background_dark"/>

</android.support.constraint.ConstraintLayout>